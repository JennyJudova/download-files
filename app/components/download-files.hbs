<div class="topRow1">
  <input id="allCheckbox" type="checkbox" checked={{this.allChecked}} onchange={{fn this.handleAllCheck @model}} />
  <h2>{{selected-counter this.counter}}</h2>
  <h2>Download Selected</h2>
</div>
<div class="topRow2">
  <h3>Name</h3>
  <h3>Device</h3>
  <h3>Path</h3>
  <h3>Status</h3>
</div>
{{#each @model as |file|}}
<div class='rowWrapper'>
  <input id={{file.name}} type="checkbox" checked={{file.isChecked}} onchange={{fn this.onChange file @model}} />
  <p>{{file.name}}</p>
  <p>{{file.device}}</p>
  <p>{{file.path}}</p>
  <p class={{file.status}} />
  <p>{{file.status}}</p>
</div>
{{/each}}